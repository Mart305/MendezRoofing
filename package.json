{
  "name": "mendez-roofing",
  "version": "1.0.0",
  "description": "Professional website for Mendez Roofing",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build",
    "build:css": "cross-env NODE_ENV=production tailwindcss -i ./src/input.css -o ./build/css/tailwind.css --minify",
    "watch:css": "tailwindcss -i ./src/input.css -o ./build/css/tailwind.css --watch",
    "build:js": "cross-env NODE_ENV=production webpack --mode production",
    "watch:js": "webpack --mode development --watch",
    "build": "npm run clean && cross-env NODE_ENV=production npm run build:js",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\" \"live-server\""
  },
  "keywords": [
    "roofing",
    "construction",
    "services"
  ],
  "author": "Mendez Roofing",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.9",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.10.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.3",
    "live-server": "^1.2.2",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.1.6",
    "rimraf": "^6.0.1",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.17",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "framer-motion": "^10.16.4",
    "gsap": "^3.12.2",
    "nodemailer": "^7.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.5.2",
    "swiper": "^10.3.1",
    "three": "^0.156.1"
  }
}
